{
  "name": "@yorab/react-paint",
  "version": "0.15.1",
  "type": "module",
  "keywords": [],
  "author": "Yohann Rabatel",
  "license": "MIT",
  "packageManager": "pnpm@10.20.0",
  "main": "./dist/react-paint.umd.cjs",
  "module": "./dist/react-paint.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/react-paint.js",
      "require": "./dist/react-paint.umd.cjs"
    },
    "./react-paint.css": "./dist/react-paint.css"
  },
  "files": [
    "README.md",
    "LICENSE.txt",
    "package.json",
    "dist/"
  ],
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@rollup/plugin-terser": "0.4.4",
    "@storybook/addon-docs": "10.2.3",
    "@storybook/addon-links": "10.2.3",
    "@storybook/addon-vitest": "10.2.3",
    "@storybook/react-vite": "10.2.3",
    "@types/node": "25.2.0",
    "@types/react": "19.2.10",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.3",
    "jsdom": "28.0.0",
    "lightningcss": "1.31.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "storybook": "10.2.3",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vite-tsconfig-paths": "6.0.5",
    "vitest": "4.0.18",
    "playwright": "1.58.1",
    "@vitest/browser-playwright": "4.0.18",
    "@vitest/coverage-v8": "4.0.18"
  },
  "peerDependencies": {
    "react": "18.x",
    "react-dom": "18.x"
  },
  "scripts": {
    "declarationfiles": "pnpm tsc --project tsconfig.prod.json && node fixDtsPath.js",
    "start": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest",
    "build": "vite build",
    "lint": "pnpm biome check --write src stories tests",
    "prepublishOnly": "pnpm build && pnpm declarationfiles",
    "publishnpm": "pnpm publish --access public"
  }
}
